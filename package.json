  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "config": "^3.3.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.3",
    "multer": "^1.4.1",
    "multer-gridfs-storage": "^3.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "stripe": "^7.4.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
